<link rel="stylesheet" href="css/products.css" type="text/css" />

<div class="productsDiv">
<div class="container">
<div class="row text-center">
    <h1 class="white mt-2 mb-5">Productos:</h1>
</div>

<div class="row">
  {{#each products}}
  <div class="col-md-3 col-sm-6 mb-4">
     <em class="small">ID: {{this.id}}</em>
        <div class="product-grid">
            <div class="product-image">
              
                <a href="#" class="image">
                    {{#each this.thumbnail}}
                      <img class="pic-1" src="img/{{this.url1}}">
                      <img class="pic-2" src="img/{{this.url2}}">
                    {{/each}}
                </a>

                <a href=" " class="product-like-icon"><i class="fa fa-heart"></i></a>

                <ul class="product-links">
                    <li><a href=" #"><i class="fa fa-heart"></i></a></li>
                    <li><a href=" #"><i class="fa fa-random"></i></a></li>
                    <li><a href=" #"><i class="fa fa-eye"></i></a></li>
                    <li><a href=" #"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>

            </div>

            <div class="product-content">
                <h3 class="title"><a href=" #">{{this.title}}</a></h3>
                <div class="price">${{this.price}}</div>
            </div>

        </div>
    </div>
    {{/each}}
</div>
</div>
</div>